      if (!validatePhone(phoneVal)) {
        showNotification('æ‰‹æœºå·æ ¼å¼ä¸æ­£ç¡®ï¼ˆ7-15ä½æ•°å­—ï¼‰', 'error');
        return;
      }

      if (displayName) displayName.textContent = nameVal;
      if (displayEmail) displayEmail.textContent = emailVal;
