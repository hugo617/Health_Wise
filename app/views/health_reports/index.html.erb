    class PullToRefresh {
      constructor() {
        this.reportsSection = document.querySelector('.reports-section');
        this.pullToRefresh = null;
        this.isRefreshing = false;
        this.startY = 0;
        this.currentY = 0;
        
        this.init();
      }

      init() {
        this.createPullToRefresh();
        this.setupTouchEvents();
      }

      createPullToRefresh() {
        this.pullToRefresh = document.createElement('div');
        this.pullToRefresh.className = 'pull-to-refresh';
        this.pullToRefresh.innerHTML = `
          <div class="refresh-spinner"></div>
          <span>ä¸‹æ‹‰åˆ·æ–°</span>
        `;
        this.reportsSection.insertBefore(this.pullToRefresh, this.reportsSection.firstChild);
      }

      setupTouchEvents() {
        let touchStartY = 0;
        let touchEndY = 0;
        let isPulling = false;

        this.reportsSection.addEventListener('touchstart', (e) => {
          if (this.reportsSection.scrollTop === 0) {
            touchStartY = e.touches[0].clientY;
            isPulling = true;
          }
        }, { passive: true });

        this.reportsSection.addEventListener('touchmove', (e) => {
          if (!isPulling || this.isRefreshing) return;
          
          touchEndY = e.touches[0].clientY;
          const pullDistance = touchEndY - touchStartY;
          
          if (pullDistance > 0 && this.reportsSection.scrollTop === 0) {
            e.preventDefault();
            
            if (pullDistance > 60) {
              this.pullToRefresh.classList.add('refreshing');
              this.pullToRefresh.querySelector('span').textContent = 'é‡Šæ”¾åˆ·æ–°';
            } else {
              this.pullToRefresh.classList.remove('refreshing');
              this.pullToRefresh.querySelector('span').textContent = 'ä¸‹æ‹‰åˆ·æ–°';
            }
            
            this.pullToRefresh.style.transform = `translateY(${Math.min(pullDistance, 80)}px)`;
          }
        }, { passive: false });

        this.reportsSection.addEventListener('touchend', (e) => {
          if (!isPulling || this.isRefreshing) return;
          
          isPulling = false;
          const pullDistance = touchEndY - touchStartY;
          
          if (pullDistance > 60) {
            this.refresh();
          } else {
            this.resetPullToRefresh();
          }
        });
      }

      refresh() {
        this.isRefreshing = true;
        this.pullToRefresh.querySelector('span').textContent = 'åˆ·æ–°ä¸­...';
        
        // æ¨¡æ‹Ÿåˆ·æ–°
        setTimeout(() => {
          showToast('âœ¨ æ•°æ®å·²åˆ·æ–°', 'success');
          this.resetPullToRefresh();
          this.isRefreshing = false;
        }, 1500);
      }

      resetPullToRefresh() {
        this.pullToRefresh.classList.remove('refreshing');
        this.pullToRefresh.style.transform = '';
        this.pullToRefresh.querySelector('span').textContent = 'ä¸‹æ‹‰åˆ·æ–°';
      }
    }

