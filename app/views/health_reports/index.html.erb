  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    /* è®¾è®¡ç³»ç»Ÿå˜é‡ - ä¸ç™»å½•é¡µé¢ä¿æŒä¸€è‡´ */
    :root {
      /* ä¸»è‰²è°ƒ - æ¥è‡ªç™»å½•é¡µé¢ */
      --primary-blue: #667eea;
      --secondary-purple: #764ba2;
      --accent-teal: #06b6d4;
      --accent-emerald: #10b981;
      --accent-rose: #f43f5e;

      /* æ¯›ç»ç’ƒæ•ˆæœ */
      --glass-bg: rgba(255, 255, 255, 0.1);
      --glass-border: rgba(255, 255, 255, 0.18);
      --shadow-light: rgba(255, 255, 255, 0.5);
      --shadow-dark: rgba(0, 0, 0, 0.1);

      /* é€šç”¨æ ·å¼ */
      --color-bg: #FFFFFF;
      --color-text: #333333;
      --color-text-light: rgba(255, 255, 255, 0.8);
      --color-text-secondary: rgba(255, 255, 255, 0.6);
      --radius: 18px;
      --radius-large: 28px;
      --radius-small: 12px;
      --shadow: 0 30px 60px rgba(0, 0, 0, 0.12);
      --shadow-soft: 0 12px 35px rgba(0, 0, 0, 0.1);
      --shadow-card: 0 8px 25px rgba(0, 0, 0, 0.08);
      --tap-size: 44px;
      --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      --transition-fast: all 0.3s ease;
      --safe-area-top: env(safe-area-inset-top, 0px);
      --safe-area-bottom: env(safe-area-inset-bottom, 0px);
    }

    html {
      scroll-behavior: smooth;
      font-size: clamp(14px, 4vw, 18px);
      -webkit-text-size-adjust: 100%;
      -webkit-tap-highlight-color: transparent;
    }

    @media (prefers-reduced-motion: reduce) {
      html { scroll-behavior: auto; }
      * { animation: none !important; transition: none !important; }
    }

    * {
      box-sizing: border-box;
      -webkit-touch-callout: none;
      -webkit-user-select: none;
      user-select: none;
    }

    input, textarea, select {
      -webkit-user-select: text;
      user-select: text;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      color: var(--color-text);
      background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      position: relative;
      overflow-x: hidden;
      padding-top: var(--safe-area-top);
      padding-bottom: var(--safe-area-bottom);
    }

    /* åŠ¨æ€èƒŒæ™¯æ•ˆæœ - ä¸ç™»å½•é¡µé¢ä¸€è‡´ */
    body::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background:
        radial-gradient(circle at 20% 20%, rgba(102, 126, 234, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(118, 75, 162, 0.25) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(16, 185, 129, 0.15) 0%, transparent 60%);
      animation: breathe 12s ease-in-out infinite;
      pointer-events: none;
      z-index: 1;
    }

    @keyframes breathe {
      0%, 100% { opacity: 1; transform: scale(1) rotate(0deg); }
      50% { opacity: 0.9; transform: scale(1.02) rotate(1deg); }
    }

    .visually-hidden {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    /* é¡¶éƒ¨å¯¼èˆªæ  - ç§»åŠ¨ç«¯ä¼˜åŒ– */
    .top-nav {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: calc(var(--tap-size) + 12px);
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border-bottom: 1px solid var(--glass-border);
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 16px;
      z-index: 1000;
      transition: var(--transition);
    }

    .nav-title {
      font-size: 18px;
      font-weight: 600;
      color: white;
      letter-spacing: 0.3px;
    }

    .nav-actions {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .logout-btn {
      background: linear-gradient(135deg,
        rgba(255, 255, 255, 0.15),
        rgba(255, 255, 255, 0.08));
      backdrop-filter: blur(12px);
      color: white;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 999px;
      padding: 8px;
      font-weight: 600;
      transition: var(--transition);
      min-height: 36px;
      min-width: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }

    .logout-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent);
      transition: left 0.6s ease;
    }

    .logout-btn:hover::before {
      left: 100%;
    }

    .logout-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
      background: linear-gradient(135deg,
        rgba(255, 255, 255, 0.25),
        rgba(255, 255, 255, 0.15));
      border-color: rgba(255, 255, 255, 0.3);
    }

    .logout-btn:active {
      transform: translateY(-1px);
    }

    .logout-icon {
      width: 20px;
      height: 20px;
    }

    /* ä¸ªäººä¿¡æ¯å¡ç‰‡ - ç§»åŠ¨ç«¯ä¼˜åŒ– */
    .profile-section {
      margin-top: calc(var(--tap-size) + 24px);
      padding: 0 16px 24px;
      position: relative;
      z-index: 2;
    }

    .profile-card {
      background: var(--glass-bg);
      backdrop-filter: blur(24px) saturate(180%);
      -webkit-backdrop-filter: blur(24px) saturate(180%);
      color: var(--color-bg);
      border-radius: var(--radius-large);
      box-shadow: var(--shadow);
      padding: 24px 20px;
      border: 1px solid var(--glass-border);
      transition: var(--transition);
      position: relative;
      overflow: hidden;
    }

    .profile-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      border-radius: var(--radius-large);
      padding: 1px;
      background: linear-gradient(135deg,
        rgba(255, 255, 255, 0.3) 0%,
        rgba(255, 255, 255, 0.05) 50%,
        rgba(255, 255, 255, 0.15) 100%);
      -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      pointer-events: none;
    }

    .profile-header {
      display: flex;
      align-items: center;
      gap: 16px;
      margin-bottom: 20px;
    }

    .avatar-container {
      position: relative;
      flex-shrink: 0;
    }

    .profile-avatar {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      border: 3px solid var(--color-bg);
      object-fit: cover;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
      transition: var(--transition);
    }

    .profile-avatar:hover {
      transform: scale(1.05);
    }

    .avatar-upload {
      position: absolute;
      bottom: 0;
      right: 0;
      width: 28px;
      height: 28px;
      background: var(--accent-teal);
      border-radius: 50%;
      border: 2px solid var(--color-bg);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: var(--transition);
    }

    .avatar-upload:hover {
      background: var(--accent-emerald);
      transform: scale(1.1);
    }

    .avatar-upload.uploading {
      background: var(--accent-teal);
      animation: pulse 1.5s ease-in-out infinite;
    }

    @keyframes pulse {
      0% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.05); opacity: 0.8; }
      100% { transform: scale(1); opacity: 1; }
    }

    .avatar-upload svg {
      width: 16px;
      height: 16px;
      color: white;
    }

    .avatar-file-input {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      cursor: pointer;
    }

    .profile-info {
      flex: 1;
      min-width: 0;
    }

    .profile-name {
      font-size: 24px;
      font-weight: 700;
      margin: 0 0 4px 0;
      color: white;
      letter-spacing: 0.3px;
    }

    .profile-membership {
      font-size: 14px;
      color: var(--color-text-light);
      background: rgba(255, 255, 255, 0.1);
      padding: 4px 12px;
      border-radius: 999px;
      display: inline-block;
      font-weight: 500;
    }

    .profile-details {
      display: grid;
      grid-template-columns: 1fr;
      gap: 12px;
      margin-bottom: 16px;
    }

    .detail-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .detail-item:last-child {
      border-bottom: none;
    }

    .detail-label {
      font-size: 14px;
      color: var(--color-text-secondary);
      font-weight: 500;
    }

    .detail-value {
      font-size: 15px;
      color: white;
      font-weight: 600;
    }

    .detail-value.password {
      font-family: monospace;
      letter-spacing: 2px;
    }

    .edit-hint {
      text-align: center;
      font-size: 12px;
      color: var(--color-text-secondary);
      margin-top: 12px;
      font-style: italic;
    }

        /* å†…è”ç¼–è¾‘æ ·å¼ */
        .detail-value {
          cursor: pointer;
          transition: all 0.3s ease;
          border-radius: 4px;
          padding: 2px 6px;
          margin: -2px -6px;
        }

        .detail-value:hover {
          background: rgba(102, 126, 234, 0.1);
          color: var(--color-primary);
        }

        .detail-value.editing {
          background: rgba(6, 182, 212, 0.1);
          border: 2px solid var(--accent-teal);
          padding: 4px 8px;
          margin: -4px -8px;
        }

        .detail-value.editing input {
          background: transparent;
          border: none;
          color: var(--color-text);
          font-size: 15px;
          font-weight: 600;
          width: 100%;
          outline: none;
          padding: 0;
          margin: 0;
        }

        .detail-value.editing input::placeholder {
          color: rgba(255, 255, 255, 0.5);
        }

        .edit-actions {
          display: flex;
          gap: 8px;
          margin-top: 8px;
          justify-content: flex-end;
        }

        .edit-actions .btn {
          padding: 6px 12px;
          font-size: 12px;
          min-height: auto;
        }

    /* ç¼–è¾‘è¡¨å• - ç§»åŠ¨ç«¯ä¼˜åŒ– */
    .edit-form {
      margin-top: 20px;
      display: grid;
      grid-template-columns: 1fr;
      gap: 16px;
      background: rgba(255, 255, 255, 0.12);
      border-radius: var(--radius);
      padding: 20px;
      display: none;
    }

    .edit-form.active {
      display: grid;
    }

    .form-row {
      display: grid;
      gap: 8px;
    }

    .form-row.full-width {
      grid-column: 1 / -1;
    }

    .edit-form label {
      color: var(--color-bg);
      font-weight: 600;
      font-size: 14px;
    }

    .edit-form input {
      width: 100%;
      padding: 16px 20px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: var(--radius-small);
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(12px);
      font-size: 16px;
      color: white;
      outline: none;
      transition: var(--transition);
      font-weight: 500;
    }

    .edit-form input::placeholder {
      color: rgba(255, 255, 255, 0.5);
      font-weight: 400;
    }

    .edit-form input:focus {
      background: rgba(255, 255, 255, 0.12);
      border-color: rgba(6, 182, 212, 0.4);
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1), 0 0 0 3px rgba(6, 182, 212, 0.1);
    }

    .edit-form input:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .form-actions {
      grid-column: 1 / -1;
      display: flex;
      gap: 12px;
      justify-content: flex-end;
      margin-top: 8px;
    }

    .btn {
      padding: 12px 24px;
      border: none;
      border-radius: var(--radius-small);
      font-weight: 600;
      font-size: 14px;
      cursor: pointer;
      transition: var(--transition);
      min-height: var(--tap-size);
      position: relative;
      overflow: hidden;
      letter-spacing: 0.3px;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--accent-teal) 0%, var(--accent-emerald) 100%);
      color: white;
      box-shadow: 0 8px 25px rgba(6, 182, 212, 0.3);
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, var(--accent-emerald) 0%, var(--accent-teal) 100%);
      transform: translateY(-2px);
      box-shadow: 0 12px 35px rgba(6, 182, 212, 0.4);
    }

    .btn-secondary {
      background: transparent;
      color: white;
      border: 2px solid rgba(255, 255, 255, 0.8);
    }

    .btn-secondary:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .btn:active {
      transform: translateY(-1px);
    }

    .form-msg {
      grid-column: 1 / -1;
      color: var(--color-bg);
      font-weight: 600;
      min-height: 24px;
      font-size: 14px;
      text-align: center;
    }

    /* æŠ¥å‘Šåˆ—è¡¨åŒºåŸŸ - ç§»åŠ¨ç«¯ä¼˜åŒ– */
    .reports-section {
      flex: 1;
      padding: 0 16px 24px;
      overflow-y: auto;
      -webkit-overflow-scrolling: touch;
      touch-action: manipulation;
      overscroll-behavior-y: contain;
      position: relative;
      z-index: 2;
    }

    .reports-header {
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .reports-header-text {
      flex: 1;
    }

    .reports-title {
      font-size: 20px;
      font-weight: 700;
      color: white;
      margin: 0 0 8px 0;
      letter-spacing: 0.3px;
    }

    .reports-subtitle {
      font-size: 14px;
      color: var(--color-text-light);
      margin: 0;
    }

    .upload-report-btn {
      background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
      color: white;
      border: none;
      border-radius: 12px;
      padding: 10px 20px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .upload-report-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(102, 126, 234, 0.4);
    }

    .upload-report-btn:active {
      transform: translateY(0);
    }

    .upload-report-btn svg {
      width: 16px;
      height: 16px;
    }

    .report-groups {
      display: grid;
      gap: 24px;
    }

    .report-group {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(12px);
      border-radius: var(--radius);
      box-shadow: var(--shadow-card);
      border: 1px solid rgba(6, 182, 212, 0.1);
      overflow: hidden;
      transition: var(--transition);
    }

    .report-group:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 35px rgba(0, 0, 0, 0.12);
    }

    .group-header {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 20px 20px 16px;
      background: linear-gradient(135deg, rgba(6, 182, 212, 0.05), rgba(16, 185, 129, 0.05));
      border-bottom: 1px solid rgba(6, 182, 212, 0.1);
    }

    .group-icon {
      width: 40px;
      height: 40px;
      border-radius: var(--radius-small);
      background: linear-gradient(135deg, var(--accent-teal), var(--accent-emerald));
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      color: white;
      flex-shrink: 0;
    }

    .group-title {
      flex: 1;
      min-width: 0;
    }

    .group-title h3 {
      margin: 0 0 4px 0;
      font-size: 18px;
      font-weight: 600;
      color: var(--color-text);
      letter-spacing: 0.3px;
    }

    .group-count {
      font-size: 13px;
      color: #6b7280;
      font-weight: 500;
    }

    .group-status {
      padding: 4px 12px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .status-active {
      background: rgba(16, 185, 129, 0.1);
      color: var(--accent-emerald);
    }

    .status-empty {
      background: rgba(107, 114, 128, 0.1);
      color: #6b7280;
    }

    .reports-list {
      display: grid;
      gap: 1px;
      background: rgba(6, 182, 212, 0.05);
    }

    .report-item {
      background: white;
      transition: var(--transition-fast);
    }

    .report-item:hover {
      background: rgba(6, 182, 212, 0.02);
    }

    .report-card {
      display: block;
      padding: 16px 20px;
      text-decoration: none;
      color: inherit;
      cursor: pointer;
      transition: var(--transition-fast);
      position: relative;
      touch-action: manipulation;
      -webkit-tap-highlight-color: transparent;
    }

    .report-card::after {
      content: '';
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      width: 6px;
      height: 6px;
      border-right: 2px solid #9ca3af;
      border-bottom: 2px solid #9ca3af;
      transform: translateY(-50%) rotate(-45deg);
      transition: var(--transition-fast);
    }

    .report-card:hover::after {
      border-color: var(--accent-teal);
      transform: translateY(-50%) rotate(-45deg) translateX(2px);
    }

    .report-card:active {
      background: rgba(6, 182, 212, 0.05);
      transform: scale(0.98);
    }

    .report-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 12px;
      margin-bottom: 8px;
    }

    .report-title {
      font-size: 16px;
      font-weight: 600;
      color: var(--color-text);
      margin: 0;
      flex: 1;
      min-width: 0;
    }

    .report-date {
      font-size: 13px;
      color: #6b7280;
      font-weight: 500;
      white-space: nowrap;
    }

    .report-summary {
      font-size: 14px;
      color: #6b7280;
      line-height: 1.5;
      margin: 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .report-tags {
      display: flex;
      gap: 6px;
      margin-top: 8px;
      flex-wrap: wrap;
    }

    .report-tag {
      padding: 2px 8px;
      border-radius: 999px;
      font-size: 11px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }

    .tag-normal {
      background: rgba(16, 185, 129, 0.1);
      color: var(--accent-emerald);
    }

    .tag-warning {
      background: rgba(245, 158, 11, 0.1);
      color: #f59e0b;
    }

    .report-actions {
      margin-top: 10px;
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
    }

    .report-group-protein .group-header {
      border-left: 3px solid var(--accent-teal);
    }

    .report-group-gene .group-header {
      border-left: 3px solid var(--accent-emerald);
    }

    .tag-error {
      background: rgba(244, 63, 94, 0.1);
      color: var(--accent-rose);
    }

    /* ç©ºçŠ¶æ€è®¾è®¡ */
    .empty-state {
      text-align: center;
      padding: 48px 24px;
      color: #6b7280;
    }

    .empty-icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 16px;
      background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(16, 185, 129, 0.1));
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 32px;
      color: var(--accent-teal);
    }

    .empty-title {
      font-size: 18px;
      font-weight: 600;
      color: var(--color-text);
      margin: 0 0 8px 0;
    }

    .empty-description {
      font-size: 14px;
      color: #6b7280;
      line-height: 1.5;
      margin: 0;
    }

    /* åŠ è½½çŠ¶æ€ */
