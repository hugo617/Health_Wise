      </svg>
      ä¸‹è½½
    </button>
  </header>

  <!-- PDF é¢„è§ˆå®¹å™¨ -->
  <div class="preview-container">
    <div class="loading-overlay" id="loading-overlay">
      <div class="spinner"></div>
      <div class="loading-text">æ­£åœ¨åŠ è½½æŠ¥å‘Š...</div>
    </div>

    <!-- ç§»åŠ¨ç«¯æç¤º -->
    <div class="mobile-preview-hint" id="mobile-hint" style="display: none;">
      <div class="hint-icon">ğŸ“„</div>
      <h3 class="hint-title">ç§»åŠ¨ç«¯ PDF é¢„è§ˆ</h3>
      <p class="hint-text">ç§»åŠ¨ç«¯æµè§ˆå™¨å°†åœ¨æ–°æ ‡ç­¾é¡µä¸­æ‰“å¼€ PDF æ–‡ä»¶</p>
      <button type="button" class="open-pdf-btn" onclick="openPdfInNewTab()">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
        æ‰“å¼€ PDF æ–‡ä»¶
      </button>
      <p class="hint-note">æˆ–ç‚¹å‡»å³ä¸Šè§’"ä¸‹è½½"æŒ‰é’®ä¿å­˜åˆ°æœ¬åœ°</p>
    </div>

    <!-- PDF é¢„è§ˆ iframeï¼ˆä»…æ¡Œé¢ç«¯æ˜¾ç¤ºï¼‰ -->
    <iframe
      id="preview-iframe"
      class="preview-iframe"
      src="<%= @health_report.report_path %>"
      title="<%= @health_report.report_type %>"
      onload="hideLoading()">
    </iframe>
  </div>

  <!-- Toast é€šçŸ¥ -->
  <div class="toast" id="toast"></div>

  <script>
    // æ£€æµ‹æ˜¯å¦ä¸ºç§»åŠ¨ç«¯
    function isMobileDevice() {
      return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ||
             (window.innerWidth <= 768);
    }

    // åœ¨æ–°æ ‡ç­¾é¡µæ‰“å¼€ PDF
    function openPdfInNewTab() {
      const pdfUrl = '<%= @health_report.report_path %>';
      window.open(pdfUrl, '_blank');
      showToast('å·²åœ¨æ–°æ ‡ç­¾é¡µæ‰“å¼€ PDF', 'success');
    }

    // éšè— loading
    function hideLoading() {
      const overlay = document.getElementById('loading-overlay');
      if (overlay) {
        overlay.classList.add('hidden');
      }
    }

    // è¿”å›ä¸Šä¸€é¡µ
    function goBack() {
      window.history.back();
    }

    // ä¸‹è½½æŠ¥å‘Š
    function downloadReport() {
      showToast('æ­£åœ¨å‡†å¤‡ä¸‹è½½...', 'info');
      window.location.href = '<%= health_report_download_path(@health_report) %>';

      // å»¶è¿Ÿæ˜¾ç¤ºæˆåŠŸæç¤º
      setTimeout(() => {
        showToast('ä¸‹è½½å·²å¼€å§‹', 'success');
      }, 500);
    }

    // Toast é€šçŸ¥
    function showToast(message, type = 'info') {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.className = 'toast';

      if (type === 'error') {
        toast.classList.add('error');
      } else if (type === 'success') {
        toast.classList.add('success');
      }

      toast.classList.add('show');

      setTimeout(() => {
        toast.classList.remove('show');
      }, 3000);
    }

    // é¡µé¢åŠ è½½æ—¶æ£€æµ‹è®¾å¤‡ç±»å‹
    document.addEventListener('DOMContentLoaded', function() {
      const iframe = document.getElementById('preview-iframe');
      const mobileHint = document.getElementById('mobile-hint');
      const loadingOverlay = document.getElementById('loading-overlay');

      if (isMobileDevice()) {
        // ç§»åŠ¨ç«¯ï¼šéšè— iframeï¼Œæ˜¾ç¤ºæç¤º
        iframe.style.display = 'none';
        mobileHint.style.display = 'block';
        hideLoading();

        // è‡ªåŠ¨åœ¨æ–°æ ‡ç­¾é¡µæ‰“å¼€ PDFï¼ˆå¯é€‰ï¼‰
        // setTimeout(() => {
        //   openPdfInNewTab();
        // }, 500);
      } else {
        // æ¡Œé¢ç«¯ï¼šæ˜¾ç¤º iframeï¼Œéšè—æç¤º
        iframe.style.display = 'block';
        mobileHint.style.display = 'none';

        // ç›‘å¬ iframe åŠ è½½é”™è¯¯
        iframe.addEventListener('error', function() {
          hideLoading();
          showToast('æŠ¥å‘ŠåŠ è½½å¤±è´¥ï¼Œè¯·ç¨åé‡è¯•', 'error');
        });

        // é¡µé¢åŠ è½½è¶…æ—¶å¤„ç†
        setTimeout(() => {
          if (loadingOverlay && !loadingOverlay.classList.contains('hidden')) {
            hideLoading();
            showToast('æŠ¥å‘ŠåŠ è½½æ—¶é—´è¾ƒé•¿ï¼Œè¯·è€å¿ƒç­‰å¾…', 'info');
          }
        }, 5000);
      }
    });
  </script>
</body>
</html>


