            // åŠ è½½å®Œæˆäº‹ä»¶
            xhr.addEventListener('load', function() {
                uploadProgress.style.display = 'none';
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-upload me-2"></i>å¼€å§‹ä¸Šä¼ ';
                
                try {
                    const data = JSON.parse(xhr.responseText);
                    
                    if (data.success) {
                        showNotification('æˆåŠŸ', data.message || 'æŠ¥å‘Šä¸Šä¼ æˆåŠŸ', 'success');

                        // å…³é—­æ¨¡æ€æ¡†
