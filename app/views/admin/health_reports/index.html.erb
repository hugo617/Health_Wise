                    }
                } catch (e) {
                    showNotification('é”™è¯¯', 'è§£æå“åº”æ•°æ®å¤±è´¥', 'error');
                }
            });
            
            // é”™è¯¯å¤„ç†
            xhr.addEventListener('error', function() {
                uploadProgress.style.display = 'none';
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fas fa-upload me-2"></i>å¼€å§‹ä¸Šä¼ ';
                showNotification('é”™è¯¯', 'ä¸Šä¼ å¤±è´¥ï¼Œè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥', 'error');
            });
            
            // å¼€å§‹ä¸Šä¼ 
            xhr.open('POST', '/admin/health_reports/upload');
            xhr.setRequestHeader('X-CSRF-Token', document.querySelector('meta[name="csrf-token"]').content);
